<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="4.76"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/punitT"
            android:textAlignment="textEnd"
            android:textSize="14dp" android:textColor="@color/colorTitle"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cantT"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            android:paddingRight="10dp"></TextView>
    <TextView
            android:text="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/cantT"
            android:textAlignment="center"
            android:textSize="14dp" android:textColor="@color/colorTitle"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/subtotalT"
            app:layout_constraintStart_toEndOf="@+id/punitT"
            android:paddingLeft="35dp"></TextView>
    <TextView
            android:text="+38.08"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/subtotalT"
            android:textAlignment="textEnd"
            android:textSize="14dp" android:textColor="@color/colorTitle"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cantT"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="10dp" android:layout_marginEnd="32dp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>